            @model IEnumerable<mystore1.Models.Category>

            @{
                ViewBag.Title = "Index";
                Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
            }

            <h2 class="bg-success">Danh Mục Sản Phẩm</h2>


            <table class="table bg-info col-lg-8">
                <tr>
                    <th class="bg-success col-lg-5">
                        @*@Html.DisplayNameFor(model => model.CategoryName)*@
                        TÊN DANH MỤC
                    </th>
                    <th class="bg-success col-lg-3 col-md-2 col-sm-1"></th>
                </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Cập Nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-prymary " }) |
                        @*@Html.ActionLink("Xam Chi Tiết", "Details", new { id=item.CategoryID }) |*@
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-prymary " })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-prymary " })
                    </td>
                </tr>
            }
            </table>
            <p>
    
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-prymary btn-sm" })
            </p>